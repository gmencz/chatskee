CreateRole({
  name: 'user',
  membership: {
    resource: Collection('users')
  },
  privileges: [
      { resource: Collection('servers'), actions: { read: true } },
      {
        resource: Collection('users'),
        actions: {
          read: Query(
            Lambda("ref",
              Equals(
                CurrentIdentity(),
                Var("ref")
              )
            )
          )
        }
      }
    ]
})